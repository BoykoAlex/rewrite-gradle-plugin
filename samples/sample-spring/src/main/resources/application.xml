<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <bean id="userRepository" class="sample.repositories.UserRepository"/>
    <bean id="userService" class="sample.services.UserService" lazy-init="true"
          scope="prototype" init-method="onInit" destroy-method="onDestroy">
        <property name="userRepository" ref="userRepository"/>
        <property name="maxUsers" value="1000"/>
    </bean>
</beans>